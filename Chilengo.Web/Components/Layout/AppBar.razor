<MudAppBar Dense="true" Elevation="0" Class="px-sm-4 px-lg-20 justify-center justify-sm-start">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudStack Spacing="1">
            <MudStack Row AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                <MudStack Row AlignItems="AlignItems.Center" Spacing="4" Class="justify-center">
                    <MudIcon Icon="@ChilengoIcons.ChilengoLogo" Size="Size.Large"/>
                    <MudText Typo="Typo.h5" Style="font-weight: 500;">
                        Chilengo
                    </MudText>
                </MudStack>
                <MudSpacer/>
                <MudStack Row Spacing="1" Class="mt-1">
                    <MudButton Variant="Variant.Text" Class="d-flex align-center" Href="#expertise">
                        <MudText Class="d-flex align-center">
                            Our Services
                        </MudText>
                    </MudButton>
                </MudStack>
            </MudStack>
            <MudDivider />
        </MudStack>
    </MudContainer>
</MudAppBar>