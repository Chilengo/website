@page "/"

<PageTitle>Home</PageTitle>

<!-- Hero Section -->
<MudContainer Class="mt-10">
    <MudStack Spacing="7" Style="min-height: 50vh;">
        <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Style="height: 100%;">
            <MudItem xs="12" lg="8">
                <MudStack Spacing="10" Class="d-flex align-center justify-center" Style="height: 100%;">
                    <MudContainer MaxWidth="MaxWidth.Medium">
                        <MudText Typo="Typo.h3" Color="Color.Primary" Align="Align.Center">
                            Where Roadblocks Become Runways.
                        </MudText>
                    </MudContainer>
                    <MudContainer MaxWidth="MaxWidth.Small">
                        <MudStack Spacing="10" AlignItems="AlignItems.Center">
                            <MudStack Spacing="5" AlignItems="AlignItems.Center">
                                <MudText Typo="Typo.h6" Align="Align.Center">
                                    My focus is on delivering the right solution
                                    to break through your barriers and accelerate your journey forward.
                                </MudText>
                                <MudStack AlignItems="AlignItems.Center">
                                    <MudButton StartIcon="@Icons.Material.Rounded.RocketLaunch" Variant="Variant.Filled"
                                               Color="Color.Primary">
                                        Get Unblocked
                                    </MudButton>
                                </MudStack>
                            </MudStack>
                        </MudStack>
                    </MudContainer>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudStack>
</MudContainer>

<MudContainer Class="mt-10">
    <MudStack Spacing="7" Style="min-height: 60vh;">
        <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Style="height: 100%;">
            <MudItem xs="12" lg="12">
                <MudGrid Justify="Justify.Center">
                    <MudItem xs="12" md="6" Class="d-flex align-center justify-center">
                        <MudImage Src="assets/ben.png" Width="400"/>
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudStack Spacing="10" Class="d-flex align-center justify-center" Style="height: 100%;">
                            <MudContainer MaxWidth="MaxWidth.Medium">
                                <MudText Typo="Typo.h4" Color="Color.Primary" Align="Align.Center">
                                    Hi. I'm Ben.
                                </MudText>
                            </MudContainer>
                            <MudContainer MaxWidth="MaxWidth.Small">
                                <MudStack Spacing="10" AlignItems="AlignItems.Center">
                                    <MudStack Spacing="5" AlignItems="AlignItems.Center">
                                        <MudText Typo="Typo.h6" Align="Align.Center">
                                            In a world of constant challenges, I'm passionate about empowering others
                                            to overcome obstacles and move forward. My focus is on providing
                                            straightforward, tailored solutions for you and your projects.
                                        </MudText>
                                    </MudStack>
                                </MudStack>
                            </MudContainer>
                        </MudStack>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    </MudStack>
</MudContainer>

<MudContainer Class="mt-10">
    <MudStack Spacing="7" Style="min-height: 50vh;">
        <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Style="height: 100%;">
            <MudItem xs="12" lg="12">
                <MudGrid Justify="Justify.Center">
                    <MudItem xs="12" md="6">
                        <MudStack Spacing="10" Class="d-flex align-center justify-center" Style="height: 100%;">
                            <MudContainer MaxWidth="MaxWidth.Medium">
                                <MudText Typo="Typo.h4" Color="Color.Primary" Align="Align.Center">
                                    My Reason Why
                                </MudText>
                            </MudContainer>
                            <MudContainer MaxWidth="MaxWidth.Small">
                                <MudStack Spacing="10" AlignItems="AlignItems.Center">
                                    <MudStack Spacing="5" AlignItems="AlignItems.Center">
                                        <MudText Typo="Typo.h6" Align="Align.Center">
                                            I started Chilengo to be the bridge between my passion for technology and
                                            my desire to help others. I'm passionate about empowering others to overcome
                                            obstacles and move forward. My focus is on providing straightforward, tailored
                                            solutions for you and your projects.
                                        </MudText>
                                    </MudStack>
                                </MudStack>
                            </MudContainer>
                        </MudStack>
                    </MudItem>
                    <MudItem xs="12" md="6" Class="d-flex align-center justify-center">
                        <MudImage Src="assets/ben_coding.png" Width="400"/>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    </MudStack>
</MudContainer>

<MudContainer Class="mt-10" id="expertise">
    <MudStack Spacing="7" Style="min-height: 50vh;">
        <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Style="height: 100%;">
            <MudItem xs="12" lg="12">
                <MudGrid Justify="Justify.Center">
                    <MudItem xs="12">
                        <MudText Typo="Typo.h4" Color="Color.Primary" Align="Align.Center" Class="mb-8">
                            Areas of Expertise
                        </MudText>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudCard Elevation="0">
                            <MudCardContent>
                                <MudStack Row Spacing="5">
                                    <MudIcon Icon="@Icons.Custom.Brands.GitHub" Color="Color.Primary" Size="Size.Large"
                                             Class="mb-4"/>
                                    <MudIcon Icon="@Icons.Custom.Brands.MicrosoftAzureDevOps" Color="Color.Primary"
                                             Size="Size.Large"
                                             Class="mb-4"/>
                                </MudStack>
                                <MudText Typo="Typo.h6" Class="mb-2">DevOps</MudText>
                                <MudText>
                                    Expertise in DevOps solutions including CI/CD pipelines, version control solutions,
                                    and more.
                                </MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudCard Elevation="0">
                            <MudCardContent>
                                <MudIcon Icon="@Icons.Material.Filled.Code" Color="Color.Primary" Size="Size.Large"
                                         Class="mb-4"/>
                                <MudText Typo="Typo.h6" Class="mb-2">Full-Stack Development</MudText>
                                <MudText>
                                    Building modern web applications using .NET, Kafka, Postgres and other cutting-edge
                                    technologies.
                                </MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudCard Elevation="0">
                            <MudCardContent>
                                <MudIcon Icon="@Icons.Material.Filled.Storage" Color="Color.Primary" Size="Size.Large"
                                         Class="mb-4"/>
                                <MudText Typo="Typo.h6" Class="mb-2">Infrastructure</MudText>
                                <MudText>
                                    On-Prem and Cloud Infrastructure solutions including virtualization,
                                    containerization,
                                    Linux and Windows Server, and everything in between.
                                </MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    </MudStack>
</MudContainer>

<MudContainer Class="mt-10">
    <MudStack Spacing="7" Style="min-height: 30vh;">
        <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Style="height: 100%;">
            <MudItem xs="12" lg="12">
                <MudGrid Justify="Justify.Center">
                    <MudItem xs="12">
                        <MudText Typo="Typo.h4" Color="Color.Primary" Align="Align.Center" Class="mb-8">
                            I Can Help With
                        </MudText>
                    </MudItem>
                    <MudItem xs="12">
                        <MudCard Elevation="0">
                            <MudCardContent>
                                <MudText Align="Align.Center" Typo="Typo.h6">
                                    Whether it's DevOps, infrastructure, full-stack development or anything in between -
                                    I'm here to help you solve technical challenges and move your projects forward.
                                    Let's work together to find the right solution for your needs.
                                </MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    </MudStack>
</MudContainer>

<MudContainer Class="mt-10">
    <MudDivider/>
    <MudStack Spacing="4" Class="py-8">
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12">
                <MudStack AlignItems="AlignItems.Center" Spacing="10">
                    <MudStack AlignItems="AlignItems.Center" Spacing="4">
                        <MudText Typo="Typo.h6" Color="Color.Primary">Connect With Me</MudText>
                        <MudStack Row="true" Spacing="4" AlignItems="AlignItems.Center">
                            <MudStack AlignItems="AlignItems.Center" Spacing="0">
                                <MudIconButton Icon="@Icons.Custom.Brands.X" Color="Color.Primary"
                                               Title="Visit Chilengo on X"
                                               Link="https://twitter.com/chilengo"/>
                                <MudText Typo="Typo.caption">Chilengo</MudText>
                            </MudStack>
                            <MudStack AlignItems="AlignItems.Center" Spacing="0">
                                <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Primary"
                                               Title="Chilengo GitHub Profile"
                                               Link="https://github.com/Chilengo"/>
                                <MudText Typo="Typo.caption">Chilengo</MudText>
                            </MudStack>
                            <MudDivider Vertical="true" FlexItem="true" Class="mx-4"/>
                            <MudStack AlignItems="AlignItems.Center" Spacing="0">
                                <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Primary"
                                               Title="Connect with Ben on LinkedIn"
                                               Link="https://www.linkedin.com/in/benjamin-burge-23b616123/"/>
                                <MudText Typo="Typo.caption">LinkedIn</MudText>
                            </MudStack>
                            <MudStack AlignItems="AlignItems.Center" Spacing="0">
                                <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Primary"
                                               Title="Ben's Personal GitHub"
                                               Link="https://github.com/BenBurge"/>
                                <MudText Typo="Typo.caption">Ben</MudText>
                            </MudStack>
                        </MudStack>
                    </MudStack>
                    <MudText Typo="Typo.body2" Color="Color.Default">© 2024-2025 Chilengo LLC. All rights reserved.</MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudStack>
</MudContainer>